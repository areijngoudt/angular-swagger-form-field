{
  "compilerOptions": {
    "module": "umd",
    "target": "es5",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "bundles",
    "rootDir": ".",
    "sourceMap": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "jasmine"
    ]
  },
  "include": [
    "src/**/*",
    "components.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
